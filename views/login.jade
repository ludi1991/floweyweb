    div
      form(action='login', method='post', align='center')
        table(align='center',style="position:relative;top:170px")
          tr
            td
              input#username(type='text', name='username', onblur="if(this.value == '')this.value='账号';",
              onfocus="if(this.value == '账号')this.value='';", value="账号")
          tr
            td
              input#password(type='text', name='password', onblur="if(this.value == ''){this.value='密码';this.type='text';}",
              onfocus="if(this.value == '密码'){this.value='';this.type='password';}", value="密码")
          tr
            td(colspan='2', align='right')
              input(type='submit',value='登 陆',data-transition='fade', data-theme='c')
