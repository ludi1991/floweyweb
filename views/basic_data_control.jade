    div(id='game' style="width: 1300px;margin:auto;")
    div(id='cp' style="width: 1300px;margin:auto;position:relative;top:10px;")
    div(id='vendor' style="width: 1300px;margin:auto;position:relative;top:10px;")
    script(type="text/javascript").
      $(document).ready(function () {
        
        $('#game').jtable({
          title: '游戏数据',
          //- paging: true, //Enable paging
          //- pageSize: 5, //Set page size (default: 10)
          //- sorting: true, //Enable sorting
          //- defaultSorting: 'username ASC', //Set default sorting
          actions: {
            listAction: 'basic_data/list_game',
            createAction: 'basic_data/create_game',
            updateAction: 'basic_data/update_game',
            deleteAction: 'basic_data/delete_game'
          },
          fields: {
            id: {
              key: true,
              create: false,
              edit: false,
              list: false
            },
            name: {
              title: '游戏名称',
              width: '50%'
            },
            gameid: {
              //- key: true,
              title: '游戏编号',
              width: '50%'
            },
          },
          //Initialize validation logic when a form is created
          formCreated: function (event, data) {
              data.form.find('input[name="name"]').addClass('validate[required]');
              data.form.find('input[name="gameid"]').addClass('validate[required]');
              data.form.validationEngine();
          },
          //Validate form when it is being submitted
          formSubmitting: function (event, data) {
              return data.form.validationEngine('validate');
          },
          //Dispose validation logic when form is closed
          formClosed: function (event, data) {
              //- data.form.validationEngine('hide');
              //- data.form.validationEngine('detach');
          }
        });

        $('#game').jtable('load');

        $('#cp').jtable({
          title: 'CP数据',
          actions: {
            listAction: 'basic_data/list_cp',
            createAction: 'basic_data/create_cp',
            updateAction: 'basic_data/update_cp',
            deleteAction: 'basic_data/delete_cp'
          },
          fields: {
            id: {
              key: true,
              create: false,
              edit: false,
              list: false
            },
            name: {
              title: 'CP名称',
              width: '50%'
            },
            cpid: {
              //- key: true,
              title: 'CP编号',
              width: '50%'
            },
          },
          //Initialize validation logic when a form is created
          formCreated: function (event, data) {
              data.form.find('input[name="name"]').addClass('validate[required]');
              data.form.find('input[name="cpid"]').addClass('validate[required]');
              data.form.validationEngine();
          },
          //Validate form when it is being submitted
          formSubmitting: function (event, data) {
              return data.form.validationEngine('validate');
          },
          //Dispose validation logic when form is closed
          formClosed: function (event, data) {
              //- data.form.validationEngine('hide');
              //- data.form.validationEngine('detach');
          }
        });

        $('#cp').jtable('load');

        $('#vendor').jtable({
          title: '渠道数据',
          //- paging: true, //Enable paging
          //- pageSize: 5, //Set page size (default: 10)
          //- sorting: true, //Enable sorting
          //- defaultSorting: 'username ASC', //Set default sorting
          actions: {
            listAction: 'basic_data/list_vendor',
            createAction: 'basic_data/create_vendor',
            updateAction: 'basic_data/update_vendor',
            deleteAction: 'basic_data/delete_vendor'
          },
          fields: {
            id: {
              key: true,
              create: false,
              edit: false,
              list: false
            },
            name: {
              title: '渠道名称',
              width: '50%'
            },
            vendorid: {
              //- key: true,
              title: '渠道编号',
              width: '50%'
            },
          },
          //Initialize validation logic when a form is created
          formCreated: function (event, data) {
              data.form.find('input[name="name"]').addClass('validate[required]');
              data.form.find('input[name="vendorid"]').addClass('validate[required]');
              data.form.validationEngine();
          },
          //Validate form when it is being submitted
          formSubmitting: function (event, data) {
              return data.form.validationEngine('validate');
          },
          //Dispose validation logic when form is closed
          formClosed: function (event, data) {
              //- data.form.validationEngine('hide');
              //- data.form.validationEngine('detach');
          }
        });

        $('#vendor').jtable('load');
      });
    
    